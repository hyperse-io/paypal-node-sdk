{
  "extends": "@hyperse/eslint-config-hyperse/tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": "./",
    "noImplicitAny": false,
    "allowJs": false,
    "noEmit": false,
    "incremental": true,
    "paths": {
      "@hyperse/paypal-node-sdk": [
        "./src/index.js"
      ]
    },
    "types": [
      "@types/node",
      "vitest/globals"
    ]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "**/node_modules",
    "**/.*/",
    "dist",
    "build",
    "docs/typings"
  ]
}